//if-else 
if(condition){
    statement;
} else {
    statement;
}

//else if 
if(condition){
    statement;
} else if(condition) {
    statement;
}
else {
    statement;
}

//switch 
switch(variable) {
    case 1: statements;
    break;
    case 2: statements;
    break;
    case n: statements;
    break;
    default : default statement;
}

//for loop
for(initialization; condition; upadtion){
....
}

//while
while(condition) {
....
}

//do while
do{
....
} while (condition);